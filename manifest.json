{
    "manifest_version": 2,
    "name": "video time",
    "description": "get the current time of youtube video",
    "version": "0.1",
    "background": {
        "scripts": ["event.js"],
        "persistent": false
    },
    "browser_action": {
        "default_icon": "icon.png",
        "default_popup": "popup.html"
    },
    /*websites where this extention will work*/
    "permissions": [
        "tabs",
        "http://*/*",
        "https://*/*"
    ]
}
